<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="background"
          stylesheets="@../css/fxplayer.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="de.victorfx.fxplayer.controller.FXPlayercontroller">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="100.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="-Infinity" prefWidth="295.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="7.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="30.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="25.0" minWidth="-Infinity" prefWidth="95.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="25.0" minWidth="-Infinity" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="13.0" minHeight="-Infinity" prefHeight="7.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="29.0" vgrow="ALWAYS"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="29.0" vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity"/>
    </rowConstraints>
    <children>
        <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false"
                onAction="#openfile" text="%openFile" GridPane.columnIndex="1" GridPane.halignment="CENTER"
                GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets left="1.0" top="1.0"/>
            </GridPane.margin>
        </Button>
        <Slider fx:id="sliderTime" blockIncrement="1.0" disable="true" nodeOrientation="LEFT_TO_RIGHT"
                onMousePressed="#sliderTimePressed" onMouseReleased="#sliderTimeReleased" prefHeight="14.0"
                prefWidth="171.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </Slider>
        <Separator orientation="VERTICAL" prefHeight="200.0" GridPane.columnIndex="4" GridPane.halignment="CENTER"
                   GridPane.rowSpan="6"/>
        <Slider fx:id="sliderVolume" blockIncrement="0.01" max="1.0" orientation="VERTICAL" value="1.0"
                GridPane.columnIndex="6" GridPane.halignment="CENTER" GridPane.rowSpan="5">
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </Slider>
        <Label text="%title" GridPane.columnIndex="2">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <Label text="%artist" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <Label rotate="-90.0" text="%volume" GridPane.columnIndex="5" GridPane.columnSpan="2147483647"
               GridPane.rowSpan="5">
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </Label>
        <Label fx:id="lblTitle" text="-" GridPane.columnIndex="3"/>
        <Label fx:id="lblArtist" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Accordion GridPane.columnIndex="3" GridPane.rowIndex="7"/>
        <TableView fx:id="playlistList" onMouseClicked="#playlistClick" prefHeight="78.0" prefWidth="532.0"
                   styleClass="table-view" GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
                   GridPane.rowIndex="7" GridPane.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tableColDuration" editable="false" maxWidth="-1.0" minWidth="115.0" prefWidth="-1.0"
                             resizable="false" sortable="false" text="%tableDuration"/>
                <TableColumn fx:id="tableColTitle" editable="false" prefWidth="75.0" text="%tableTitle"/>
                <TableColumn fx:id="tableColArtist" editable="false" prefWidth="75.0" text="%tableArtist"/>
                <TableColumn fx:id="tableColAlbum" editable="false" prefWidth="75.0" text="%tableAlbum"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <GridPane.margin>
                <Insets left="5.0" right="5.0"/>
            </GridPane.margin>
        </TableView>
        <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0"
              GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="9">
            <children>
                <Button mnemonicParsing="false" onAction="#dialogSavePlaylist" text="%saveList">
                    <HBox.margin>
                        <Insets left="1.0"/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#dialogOpenPlaylist" text="%openList"/>
                <Separator orientation="VERTICAL" prefHeight="29.0" prefWidth="30.0"/>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#deleteFromList"
                        text="%deleteFromList">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#addToList" text="%addToListFiles"/>
            </children>
        </HBox>
        <Label text="%album" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <Label fx:id="lblAlbum" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="3"
              GridPane.rowIndex="5">
            <children>
                <Button fx:id="btnStop" disable="true" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#stop" text="%stop"/>
                <Button fx:id="btnBefore" disable="true" mnemonicParsing="false" onAction="#playBeforeSong"
                        text="&lt;"/>
                <Button fx:id="btnPlay" disable="true" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#play" text="%play"/>
                <Button fx:id="btnNext" disable="true" mnemonicParsing="false" onAction="#playNextSong" text="&gt;"/>
                <Label fx:id="timelabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                       maxWidth="1.7976931348623157E308" text="--:-- / --:--" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="6">
            <padding>
                <Insets top="10.0"/>
            </padding>
        </Separator>
        <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="8">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Separator>
        <Label fx:id="lblVolume" alignment="CENTER" contentDisplay="CENTER" text="- %" GridPane.columnIndex="5"
               GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
               GridPane.rowIndex="5" GridPane.vgrow="NEVER"/>
        <TitledPane alignment="CENTER" contentDisplay="CENTER" expanded="false" text="Visualizer" textAlignment="CENTER"
                    GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="10">
            <content>
                <AreaChart fx:id="spektrum" alternativeRowFillVisible="false" animated="false" createSymbols="false"
                           horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false"
                           styleClass="bar-chart" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
                    <xAxis>
                        <CategoryAxis animated="false" side="BOTTOM" tickLabelsVisible="false" tickMarkVisible="false"
                                      visible="false"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis animated="false" autoRanging="false" minorTickVisible="false" side="LEFT"
                                    tickLabelsVisible="false" tickMarkVisible="false" upperBound="55.0"
                                    visible="false"/>
                    </yAxis>
                    <effect>
                        <GaussianBlur radius="2.5"/>
                    </effect>
                </AreaChart>
            </content>
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </TitledPane>
    </children>
</GridPane>
