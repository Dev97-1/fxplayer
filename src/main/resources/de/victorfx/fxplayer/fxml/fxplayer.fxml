<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.glyphfont.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
          prefWidth="800.0"
          styleClass="background" stylesheets="@../css/fxplayer.css" xmlns="http://javafx.com/javafx/8.0.65"
          fx:controller="de.victorfx.fxplayer.controller.FXPlayercontroller">
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="100.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="-Infinity" prefWidth="295.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="7.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="-Infinity" prefWidth="30.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="25.0" minWidth="-Infinity" prefWidth="95.0"/>
        <ColumnConstraints hgrow="NEVER" maxWidth="25.0" minWidth="-Infinity" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="30.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="13.0" minHeight="-Infinity" prefHeight="7.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="25.0" minHeight="-Infinity" prefHeight="20.0" vgrow="NEVER"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="29.0" vgrow="ALWAYS"/>
        <RowConstraints vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity" prefHeight="29.0" vgrow="NEVER"/>
        <RowConstraints minHeight="-Infinity"/>
        <RowConstraints minHeight="-Infinity" prefHeight="0.0" vgrow="NEVER"/>
    </rowConstraints>
    <children>
        <Slider fx:id="sliderTime" blockIncrement="1.0" disable="true" nodeOrientation="LEFT_TO_RIGHT"
                onMousePressed="#sliderTimePressed" onMouseReleased="#sliderTimeReleased" prefHeight="14.0"
                prefWidth="171.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="10.0" right="10.0"/>
            </GridPane.margin>
        </Slider>
        <Separator orientation="VERTICAL" prefHeight="200.0" GridPane.columnIndex="4" GridPane.halignment="CENTER"
                   GridPane.rowSpan="6"/>
        <Slider fx:id="sliderVolume" blockIncrement="0.01" max="1.0" orientation="VERTICAL" value="1.0"
                GridPane.columnIndex="6" GridPane.halignment="CENTER" GridPane.rowSpan="5">
            <GridPane.margin>
                <Insets top="10.0"/>
            </GridPane.margin>
        </Slider>
        <Label styleClass="label-default" text="%title" GridPane.columnIndex="2">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <Label styleClass="label-default" text="%artist" GridPane.columnIndex="2" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <Label styleClass="label-default" GridPane.columnIndex="5" GridPane.halignment="CENTER" GridPane.rowSpan="5">
            <graphic>
                <Glyph fontFamily="FontAwesome" icon="volume_up" styleClass="glyph"/>
            </graphic>
        </Label>
        <Label fx:id="lblTitle" styleClass="label-default" text="-" GridPane.columnIndex="3"/>
        <Label fx:id="lblArtist" styleClass="label-default" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        <Accordion GridPane.columnIndex="3" GridPane.rowIndex="7"/>
        <TableView fx:id="playlistList" onMouseClicked="#playlistClick" prefHeight="78.0" prefWidth="532.0"
                   styleClass="table-view" GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
                   GridPane.rowIndex="7" GridPane.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="tableColDuration" editable="false" maxWidth="-1.0" minWidth="115.0" prefWidth="-1.0"
                             resizable="false" sortable="false" text="%tableDuration"/>
                <TableColumn fx:id="tableColTitle" editable="false" prefWidth="75.0" text="%tableTitle"/>
                <TableColumn fx:id="tableColArtist" editable="false" prefWidth="75.0" text="%tableArtist"/>
                <TableColumn fx:id="tableColAlbum" editable="false" prefWidth="75.0" text="%tableAlbum"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <GridPane.margin>
                <Insets left="5.0" right="5.0"/>
            </GridPane.margin>
        </TableView>
        <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="100.0" prefWidth="200.0"
              GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="9">
            <children>
                <Button mnemonicParsing="false" onAction="#dialogSavePlaylist">
                    <tooltip>
                        <Tooltip text="%saveList"/>
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="hdd_alt" styleClass="glyph"/>
                    </graphic>
                    <HBox.margin>
                        <Insets left="1.0"/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#dialogOpenPlaylist">
                    <tooltip>
                        <Tooltip text="%openList"/>
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="folder_open" styleClass="glyph"/>
                    </graphic>
                </Button>
                <Separator orientation="VERTICAL" prefHeight="29.0" prefWidth="30.0"/>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#deleteFromList">
                    <tooltip>
                        <Tooltip text="%deleteFromList"/>
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="minus" styleClass="glyph"/>
                    </graphic>
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#addToList">
                    <tooltip>
                        <Tooltip text="%addToListFiles"/>
                    </tooltip>
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="plus" styleClass="glyph"/>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <Label styleClass="label-default" text="%album" GridPane.columnIndex="2" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0"/>
            </GridPane.margin>
        </Label>
        <Label fx:id="lblAlbum" styleClass="label-default" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="3"
              GridPane.rowIndex="5">
            <children>
                <Button fx:id="btnStop" disable="true" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#stop">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="stop" styleClass="glyph"/>
                    </graphic>
                </Button>
                <Button fx:id="btnBefore" disable="true" mnemonicParsing="false" onAction="#playBeforeSong">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="step_backward" styleClass="glyph"/>
                    </graphic>
                </Button>
                <Button fx:id="btnPlay" disable="true" maxHeight="1.7976931348623157E308"
                        maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#play">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="play" styleClass="glyph"/>
                    </graphic>
                </Button>
                <Button fx:id="btnNext" disable="true" mnemonicParsing="false" onAction="#playNextSong">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="step_forward" styleClass="glyph"/>
                    </graphic>
                </Button>
                <Label fx:id="timelabel" alignment="CENTER" contentDisplay="CENTER" maxHeight="1.7976931348623157E308"
                       maxWidth="1.7976931348623157E308" styleClass="label-default" text="--:-- / --:--"
                       HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
            </children>
        </HBox>
        <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="6">
            <padding>
                <Insets top="10.0"/>
            </padding>
        </Separator>
        <Separator prefWidth="200.0" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.rowIndex="8">
            <padding>
                <Insets bottom="10.0"/>
            </padding>
        </Separator>
        <Label fx:id="lblVolume" alignment="CENTER" contentDisplay="CENTER" styleClass="label-default" text="- %"
               GridPane.columnIndex="5" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER"
               GridPane.hgrow="ALWAYS" GridPane.rowIndex="5" GridPane.vgrow="NEVER"/>
        <TitledPane fx:id="titledPaneVisualizer" alignment="CENTER" contentDisplay="RIGHT" expanded="false"
                    text="%visualizer" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.columnSpan="2147483647"
                    GridPane.rowIndex="10">
            <graphic>
                <Glyph fontFamily="FontAwesome" icon="area_chart"/>
            </graphic>
            <content>
                <AreaChart fx:id="spektrum" alternativeRowFillVisible="false" animated="false" createSymbols="false"
                           horizontalGridLinesVisible="false" horizontalZeroLineVisible="false" legendVisible="false"
                           styleClass="bar-chart" verticalGridLinesVisible="false" verticalZeroLineVisible="false">
                    <xAxis>
                        <CategoryAxis animated="false" side="BOTTOM" tickLabelsVisible="false" tickMarkVisible="false"
                                      visible="false"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis animated="false" autoRanging="false" minorTickVisible="false" side="LEFT"
                                    tickLabelsVisible="false" tickMarkVisible="false" upperBound="55.0"
                                    visible="false"/>
                    </yAxis>
                    <effect>
                        <GaussianBlur radius="2.5"/>
                    </effect>
                </AreaChart>
            </content>
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </TitledPane>
        <MenuBar GridPane.columnIndex="1" GridPane.rowSpan="2" GridPane.valignment="TOP">
            <menus>
                <Menu mnemonicParsing="false" text="%menu">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openfile" text="%openFile"/>
                        <MenuItem mnemonicParsing="false" onAction="#closeApplication" text="%exit"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Label styleClass="label-default" text="%fps" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="5.0"/>
            </GridPane.margin>
        </Label>
        <Label fx:id="fps" styleClass="label-default" text="-" GridPane.columnIndex="1" GridPane.halignment="RIGHT"
               GridPane.rowIndex="2"/>
        <TitledPane alignment="CENTER" disable="true" expanded="false" text="%video" textAlignment="CENTER"
                    visible="false" GridPane.columnIndex="1" GridPane.columnSpan="2147483647" GridPane.hgrow="NEVER"
                    GridPane.rowIndex="11" GridPane.vgrow="NEVER">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
            <content>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="150.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" valignment="TOP"/>
                    </rowConstraints>
                    <children>
                        <Button ellipsisString="Vollbild" mnemonicParsing="false" text="%fullscreen"
                                textAlignment="CENTER" GridPane.columnIndex="1"/>
                        <MediaView fx:id="videoView" fitHeight="400.0" nodeOrientation="INHERIT"
                                   GridPane.halignment="CENTER"/>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </children>
</GridPane>
